% Custom full title page
\newcommand{\ctitlepage}[2]{{
	\begin{titlepage}
		\centering
		{\upshape\Large #1\par}
		\vspace{2cm}
		{\upshape\large YOUR NAME \par}
		\vspace{1.5cm}
		{\upshape\large #2\par}
		\vfill
		{\small Last Revised: \today}
	\end{titlepage}
}}

% Custom small title page or report title
\newcommand{\csmalltitle}[1]{{
	\begin{center}
		{\upshape\bfseries \LARGE #1\par}
		\vspace{0.25cm}
		{\upshape YOUR NAME \par}
		\vspace{0.25cm}
		{\upshape YOUR ADDRESS \par}
	\end{center}
}}

% Custom title page with title and contents
\newcommand{\ctitlecontents}[2]{{
	\begin{center}
		{\upshape\Large #1 \par}
		\vspace{0.25cm}
		{\upshape\large YOUR NAME \par}
		\vspace{0.25cm}
		{\upshape\small Created #2, Last Revised \today\par}
		\vspace{0.5cm}
		\@starttoc{toc}
	\end{center}
	\newpage
}}

